{
  "manifest_version": 3,
  "name": "CodeMate",
  "version": "1.0",
  "description": "Get hints, solutions, or optimized versions of your code instantly!",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://*.leetcode.com/*",
    "https://*.geeksforgeeks.org/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.leetcode.com/*",
        "https://*.geeksforgeeks.org/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
